<Window x:Class="EmailWithFTP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmailWithFTP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="317*"/>
            <RowDefinition Height="59*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="653*"/>
            <ColumnDefinition Width="70*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="stackPanelSignIn" Grid.Column="1" Grid.Row="1">
            <TextBox Text="example@mail.ru" TextWrapping="Wrap" Width="222" Height="37" Margin="0 100 0 0" FontSize="18"/>
            <TextBox TextWrapping="Wrap" Width="222" Height="37" Margin="0 10 0 0" FontSize="18"/>
            <Button Content="Войти" Width="176" Height="41" Margin="0 10 0 0" Background="DarkBlue" Foreground="White" FontSize="20" FontWeight="Bold" Click="SignIn"/>
        </StackPanel>

    </Grid>
</Window>
